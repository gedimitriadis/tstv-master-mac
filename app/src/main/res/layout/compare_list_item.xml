
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <!-- Woman ring image-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Image_Ring_Woman"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:contentDescription="ring description" />

        <!-- Ring Pair data WOMAN-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:layout_margin="@dimen/margin8"
            android:orientation="vertical">

            <!-- Woman design-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Σχέδιο" />

                <TextView
                    android:id="@+id/Design_Woman_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Woman carats-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Καράτια" />

                <TextView
                    android:id="@+id/Carats_Woman_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Woman profile -->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Προφίλ" />

                <TextView
                    android:id="@+id/Profile_Woman_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Woman Stones-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Αριθμός μπριγιάν" />

                <TextView
                    android:id="@+id/Stones_Woman_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Man ring image-->
        <ImageView
            android:id="@+id/Image_Ring_Man"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:contentDescription="ring description" />

        <!-- Ring Pair data MAN-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:layout_margin="@dimen/margin8"
            android:orientation="vertical">

            <!-- Man design-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Σχέδιο" />

                <TextView
                    android:id="@+id/Design_Man_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Man carats-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Καράτια" />

                <TextView
                    android:id="@+id/Carats_Man_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Man profile -->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Προφίλ" />

                <TextView
                    android:id="@+id/Profile_Man_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

            <!-- Man Stones-->
            <LinearLayout style="@style/LinearLayoutStyle">

                <TextView
                    style="@style/labelStyleW600"
                    android:text="Αριθμός μπριγιάν" />

                <TextView
                    android:id="@+id/Stones_Man_TextView"
                    style="@style/DataStyleW600" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Pair_Price_Label_TextView"
            style="@style/labelStyleW600"
            android:text="Τιμή ζευγαριού"
            android:layout_marginLeft="@dimen/paddingBottom32"/>


        <TextView
            android:id="@+id/Pair_Price_Data_TextView"
            style="@style/DataStyleW600"
            android:textColor="#ffffff"
            android:textSize="@dimen/text24" />



    </LinearLayout>

</LinearLayout>
