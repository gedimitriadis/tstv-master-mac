<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="LinearLayoutSexStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SexSymbolStyle">
        <item name="android:layout_width">@dimen/width60</item>
        <item name="android:layout_height">@dimen/height60</item>
        <item name="android:layout_marginBottom">@dimen/paddingBottom32</item>
        <item name="android:layout_marginTop">@dimen/paddingBottom32</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="LeftLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
    </style>

    <style name="AvailableColorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RightLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft8</item>
    </style>

    <style name="appVersionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="LeftPricesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="RightPricesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft8</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding4</item>
        <item name="android:dropDownWidth">150dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@color/gold</item>
    </style>


    <style name="totalCostsLabelsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="totalCostsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/layoutMargin24</item>
        <item name="android:padding">@dimen/padding4</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/gold</item>
    </style>


</resources>
