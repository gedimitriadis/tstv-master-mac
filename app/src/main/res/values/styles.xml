<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gold</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LinearLayoutSexStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SexSymbolStyle">
        <item name="android:layout_width">@dimen/width60</item>
        <item name="android:layout_height">@dimen/height60</item>
        <item name="android:layout_marginBottom">@dimen/paddingBottom32</item>
        <item name="android:layout_marginTop">@dimen/paddingBottom32</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="LeftLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text24</item>
    </style>

    <style name="LeftLabelStyleW600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="AvailableColorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:layout_marginRight">@dimen/marginLeft12</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ExplanationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:layout_marginRight">@dimen/marginLeft12</item>
        <item name="android:paddingBottom">@dimen/paddingBottom8</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RightLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft8</item>
        <item name="android:textSize">@dimen/text24</item>
    </style>

    <style name="RightLabelStyleW600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft8</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="appVersionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="appVersionStyle600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text11</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="LeftPricesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="RightPricesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft8</item>
        <item name="android:paddingBottom">@dimen/paddingBottom32</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding4</item>
        <item name="android:dropDownWidth">250dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="SpinnerStyleW600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding4</item>
        <item name="android:dropDownWidth">250dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">@color/gold</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>


    <style name="totalCostsLabelsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="totalCostsLabelsStyleW600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="totalCostsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text48</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="totalCostsStyleW600">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft12</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/layoutMargin24</item>
        <item name="android:padding">@dimen/padding4</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:background">@color/gold</item>
    </style>

    <style name="ButtonStyleW600">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/layoutMargin24</item>
        <item name="android:padding">@dimen/padding4</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:background">@color/gold</item>
    </style>

    <!-- style for pair comparison -->

    <style name="imageStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin8</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">@dimen/width100</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="labelStyleW600">
        <item name="android:layout_width">@dimen/width100</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DataStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="DataStyleW600">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin8</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- style for pair comparison -->



</resources>
